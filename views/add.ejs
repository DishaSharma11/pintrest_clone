<% include ./partials/header.ejs %>

<div class="w-full px-10 py-3 flex justify-between">
    <div class="flex gap-2">
        <img src="https://i.pinimg.com/736x/98/a6/de/98a6de54dc27442a3c8375ab303c6e42.jpg" class="w-10 h-10">
        <p class="mt-2 text-semibold">Pinterest</p>
    </div>
    <div class="flex gap-10 items-center">
      <a href="/profile">Profile</a>
      <a href="/feed">Feed</a>
      <a class="px-3 py-2 bg-red-600 text-white rounded-lg" href="/logout">Logout</a>
    </div>
</div>
<div class="w-full min-h-screen px-10 py-5">
  <h1 class="text-xl">Create a new post</h1>
  <hr class="opacity-10 mt-3">
  <form action="/createpost" method="post" enctype="multipart/form-data">
    <input class="block w-1/3 px-3 py-2" type="file" name="postimage">
    <input class="block w-1/3 px-3 py-2 border-2 rounded-md" type="text" name="title" placeholder="Title">
    <textarea class="block w-1/3 h-48 px-3 py-2 border-2 mt-2 rounded-md" placeholder="Description" name="description"></textarea>
    <input class="block w-1/3 px-3 py-2 mt-2 bg-red-600 rounded-md text-white" type="submit" value="Create Post">
  </form>
</div>
<% include ./partials/footer.ejs %>