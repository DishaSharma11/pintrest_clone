<% include ./partials/header.ejs %>

  <div class="w-full px-10 py-3 flex justify-between">
    <div class="flex gap-2">
      <img src="https://i.pinimg.com/736x/98/a6/de/98a6de54dc27442a3c8375ab303c6e42.jpg" class="w-10 h-10">
      <p class="mt-2 text-semibold">Pinterest</p>
    </div>
    <div class="flex gap-10 items-center">
      <a href="/profile">Profile</a>
      <a href="/feed">Feed</a>
      <a class="px-3 py-2 bg-red-600 text-white rounded-lg" href="/logout">Logout</a>
    </div>
  </div>
  <div class="w-full min-h-screen px-10 py-8">
    <div class="cards flex flex-wrap gap-10">
        <% user.posts.forEach(function(elem){ %>
            <div class="w-32">
                <div class="card w-full  bg-sky-200 rounded-lg overflow-hidden">
                    <img lass="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>">           
                </div>
                <h5 class="mt-2 text-sm"><%= elem.title%></h5>
            </div>
        <% })%>
        
    </div>
  </div>

  
  <% include ./partials/footer.ejs %>